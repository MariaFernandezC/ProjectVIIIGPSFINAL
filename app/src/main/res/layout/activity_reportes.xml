<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reportes">

    <ImageView
        android:layout_width="186dp"
        android:layout_height="107dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="99dp"
        android:contentDescription="TODO"
        android:src="@drawable/projectgps" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="1dp"
        tools:context=".Reportes" />

    <Button
        android:id="@+id/btnSatelite"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:layout_marginRight="20dp"
        android:background="#1e8449"
        android:elevation="5dp"
        android:onClick="llamada"
        android:text="Buscar" />

    <EditText
        android:id="@+id/et_mostrar_fecha_picker"

        android:layout_width="217dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/input"
        android:hint="@string/formato_fecha"
        android:inputType="date"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#1e8449"
        android:textColorHint="#1e8449" />

    <ImageButton
        android:id="@+id/ib_obtener_fecha"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="344dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#4CAF50"
        android:scaleType="center"
        android:src="@drawable/ico" />


</RelativeLayout>